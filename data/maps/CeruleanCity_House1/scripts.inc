CeruleanCity_House1_MapScripts::
	.byte 0

CeruleanCity_House1_EventScript_ArtifactGuy::
	lock
	faceplayer
	msgbox CeruleanCity_House1_Text_ArtifactsHaveAmazingSecrets
	message CeruleanCity_House1_Text_DescribeWhichArtifact
	waitmessage
	special ListMenu
	waitstate
	switch VAR_RESULT
	case 0, CeruleanCity_House1_EventScript_DescribeBoulderArtifact
	case 1, CeruleanCity_House1_EventScript_DescribeCascadeArtifact
	case 2, CeruleanCity_House1_EventScript_DescribeThunderArtifact
	case 3, CeruleanCity_House1_EventScript_DescribeRainbowArtifact
	case 4, CeruleanCity_House1_EventScript_DescribeSoulArtifact
	case 5, CeruleanCity_House1_EventScript_DescribeMarshArtifact
	case 6, CeruleanCity_House1_EventScript_DescribeVolcanoArtifact
	case 7, CeruleanCity_House1_EventScript_DescribeEarthArtifact
	case 8, CeruleanCity_House1_EventScript_StopDescribingArtifacts
	case 127, CeruleanCity_House1_EventScript_StopDescribingArtifacts
	end

CeruleanCity_House1_EventScript_DescribeAnotherArtifact::
	message CeruleanCity_House1_Text_DescribeWhichArtifact
	waitmessage
	special ReturnToListMenu
	waitstate
	switch VAR_RESULT
	case 0, CeruleanCity_House1_EventScript_DescribeBoulderArtifact
	case 1, CeruleanCity_House1_EventScript_DescribeCascadeArtifact
	case 2, CeruleanCity_House1_EventScript_DescribeThunderArtifact
	case 3, CeruleanCity_House1_EventScript_DescribeRainbowArtifact
	case 4, CeruleanCity_House1_EventScript_DescribeSoulArtifact
	case 5, CeruleanCity_House1_EventScript_DescribeMarshArtifact
	case 6, CeruleanCity_House1_EventScript_DescribeVolcanoArtifact
	case 7, CeruleanCity_House1_EventScript_DescribeEarthArtifact
	case 8, CeruleanCity_House1_EventScript_StopDescribingArtifacts
	case 127, CeruleanCity_House1_EventScript_StopDescribingArtifacts
	end

CeruleanCity_House1_EventScript_DescribeBoulderArtifact::
	msgbox CeruleanCity_House1_Text_AttackStatFlash
	goto CeruleanCity_House1_EventScript_DescribeAnotherArtifact
	end

CeruleanCity_House1_EventScript_DescribeCascadeArtifact::
	msgbox CeruleanCity_House1_Text_ObeyLv30Cut
	goto CeruleanCity_House1_EventScript_DescribeAnotherArtifact
	end

CeruleanCity_House1_EventScript_DescribeThunderArtifact::
	msgbox CeruleanCity_House1_Text_SpeedStatFly
	goto CeruleanCity_House1_EventScript_DescribeAnotherArtifact
	end

CeruleanCity_House1_EventScript_DescribeRainbowArtifact::
	msgbox CeruleanCity_House1_Text_ObeyLv50Strength
	goto CeruleanCity_House1_EventScript_DescribeAnotherArtifact
	end

CeruleanCity_House1_EventScript_DescribeSoulArtifact::
	msgbox CeruleanCity_House1_Text_DefenseStatSurf
	goto CeruleanCity_House1_EventScript_DescribeAnotherArtifact
	end

CeruleanCity_House1_EventScript_DescribeMarshArtifact::
	msgbox CeruleanCity_House1_Text_ObeyLv70RockSmash
	goto CeruleanCity_House1_EventScript_DescribeAnotherArtifact
	end

CeruleanCity_House1_EventScript_DescribeVolcanoArtifact::
	msgbox CeruleanCity_House1_Text_SpStatsWaterfall
	goto CeruleanCity_House1_EventScript_DescribeAnotherArtifact
	end

CeruleanCity_House1_EventScript_DescribeEarthArtifact::
	msgbox CeruleanCity_House1_Text_AllMonsWillObeyYou
	goto CeruleanCity_House1_EventScript_DescribeAnotherArtifact
	end

CeruleanCity_House1_EventScript_StopDescribingArtifacts::
	msgbox CeruleanCity_House1_Text_ComeVisitAnytime
	release
	end
